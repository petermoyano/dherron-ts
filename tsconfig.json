{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "lib": ["es2021", "ESNext"], // definitios and support for the ES5/Es6/Es7/Es8/Es9/Es10/Es11/Es12/Es2020/Es2021
    "target": "ES2021", //specifies code to generate
    "module": "esnext", //module system to be used for the project
    "esModuleInterop": true, //fixes issues with importing commonjs modules
    "moduleResolution": "Node" //specifies how modules are resolved
  }
}
